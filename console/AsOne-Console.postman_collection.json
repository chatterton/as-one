	"item": [
		{
			"name": "Sensor Simulator",
			"item": [
				{
					"name": "Add Simulator",
					"event": [
						{
							"listen": "test",
							"script": {
								"id": "be5afa15-2eab-4040-b04a-26996ba85298",
								"exec": [
									"// Make sure the creation was successful",
									"pm.test(\"Expect simulator to have been created\", function () {",
									"    pm.response.to.have.status(\"Created\");",
									"});",
									"",
									"// Save the path for use in later requests. Not sure why",
									"// neither pm.environment nor pm.variables will let this",
									"// work -- it really seems to want a global :-/",
									"pm.globals.set(\"simulator-path\", pm.response.text());",
									""
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{host}}/sensors/simulated/add",
							"host": [
								"{{host}}"
							],
							"path": [
								"sensors",
								"simulated",
								"add"
							]
						}
					},
					"response": []
				},
				{
					"name": "Delete Simulator",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{host}}{{simulator-path}}",
							"host": [
								"{{host}}{{simulator-path}}"
							]
						}
					},
					"response": []
				},
				{
					"name": "Get Simulator",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{host}}{{simulator-path}}",
							"host": [
								"{{host}}{{simulator-path}}"
							]
						}
					},
					"response": []
				},
				{
					"name": "Simulate Pickup",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"name": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{ \"newState\": \"pickup\" }"
						},
						"url": {
							"raw": "{{host}}{{simulator-path}}",
							"host": [
								"{{host}}{{simulator-path}}"
							]
						}
					},
					"response": []
